
<h1>TASKS </h1>
<form>
<% @tasks.each do |task| %>
  <% if task.completed %>
    <input type="checkbox" checked ><%=  link_to task.title,task_path(task)%><h2 id='f'><%= link_to 'delete', task_path(task), method: :delete %></h2><br>
    <% else %>
      <input type="checkbox"><%= link_to task.title, task_path(task) %><h2 id='f'><%= link_to 'delete', task_path(task), method: :delete, data: {confirm: 'are you sure?'} %></h2><br>
      <% end %>
    <% end %>

     <%= link_to 'add a new task', tasks_new_path %>


</form>
